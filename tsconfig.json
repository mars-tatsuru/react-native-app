{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": ["types", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "src": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/**/*.ts", "src/**/*.tsx"],
  "no-implicit-dependencies": [true, ["AppRoot"]]
}
